<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @property.property_name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @property.rent %>
</p>

<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @property.age %>
</p>

<p>
  <strong>備考:</strong>
  <%= @property.note %>
</p>

<hr>
<% number = 0 %>
<% @property.nearest_stations.each do |nearest_station|%>
  <h2>最寄駅<%= number += 1 %></h2>
  <p>
    <strong>路線名:</strong>
    <%= nearest_station.route_name %>
  </p>
  <p>
    <strong>駅名:</strong>
    <%= nearest_station.station_name %>
  </p>
  <p>
    <strong>徒歩分数:</strong>
    <%= "#{nearest_station.time}分" %>
  </p>

<%= @property.nearest_station_count %> 件の最寄り駅が登録されています。
<% end %>

<%= link_to '編集', edit_property_path(@property) %> |
